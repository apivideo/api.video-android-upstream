<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="@string/endpoint">
        <SwitchPreference
            android:defaultValue="true"
            app:key="@string/api_endpoint_environment_key"
            app:summaryOff="@string/api_endpoint_environment_sandbox"
            app:summaryOn="@string/api_endpoint_environment_production"
            app:title="@string/api_endpoint_environment" />

        <SwitchPreference
            android:defaultValue="false"
            app:key="@string/api_endpoint_type_key"
            app:summaryOn="@string/api_endpoint_api_key"
            app:summaryOff="@string/api_endpoint_upload_token"
            app:title="@string/api_endpoint_type" />

        <EditTextPreference
            android:defaultValue="@string/api_endpoint_api_key_default"
            app:key="@string/api_endpoint_api_key_key"
            app:title="@string/api_endpoint_api_key"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:defaultValue="@string/api_endpoint_video_id_default"
            app:key="@string/api_endpoint_video_id_key"
            app:title="@string/api_endpoint_video_id"
            app:useSimpleSummaryProvider="true" />


        <EditTextPreference
            android:defaultValue="@string/api_endpoint_upload_token_default"
            app:key="@string/api_endpoint_upload_token_key"
            app:title="@string/api_endpoint_upload_token"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/video">
        <ListPreference
            app:key="@string/video_resolution_key"
            app:title="@string/video_resolution"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="30"
            app:entries="@array/FpsEntries"
            app:entryValues="@array/FpsEntries"
            app:key="@string/video_fps_key"
            app:title="@string/video_fps"
            app:useSimpleSummaryProvider="true" />

        <SeekBarPreference
            android:max="10000"
            app:defaultValue="5000"
            app:key="@string/video_bitrate_key"
            app:min="500"
            app:showSeekBarValue="true"
            app:title="@string/bitrate"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/audio">
        <ListPreference
            app:defaultValue="2"
            app:entries="@array/AudioNumberOfChannelsEntries"
            app:entryValues="@array/AudioNumberOfChannelsEntryValues"
            app:key="@string/audio_number_of_channels_key"
            app:title="@string/audio_number_of_channels"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="128000"
            app:entries="@array/AudioBitrateEntries"
            app:entryValues="@array/AudioBitrateEntryValues"
            app:key="@string/audio_bitrate_key"
            app:title="@string/bitrate"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="44100"
            app:key="@string/audio_sample_rate_key"
            app:title="@string/audio_sample_rate"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreference
            android:defaultValue="true"
            app:key="@string/audio_enable_echo_canceler_key"
            app:title="@string/audio_enable_echo_canceler" />

        <SwitchPreference
            android:defaultValue="true"
            app:key="@string/audio_enable_noise_suppressor_key"
            app:title="@string/audio_enable_noise_suppressor" />

    </PreferenceCategory>
</PreferenceScreen>